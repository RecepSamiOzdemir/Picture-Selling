@model Category

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h1>Edit Category</h1>

<div class="row">
    <div class="col-md-4">
        <form action="edit" method="POST">
            <input type="hidden" name="Id" class="form-control" value="@Model.Id" />
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Title</label>
                <input type="text" name="Title" class="form-control" value="@Model.Title" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-warning"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button class="btn btn-success">Back to List</button></a>
</div>