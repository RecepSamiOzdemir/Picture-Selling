@model Stock

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h1>Edit Stock</h1>

<div class="row">
    <div class="col-md-4">
        <form action="edit" method="POST">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Picture</label>
                <input type="text" class="form-control" value="@Model.Picture.Title " disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Stock Count</label>
                <input type="text" name="StokCount" class="form-control" value="@Model.StokCount" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-warning"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button class="btn btn-success">Back to List</button></a>
</div>